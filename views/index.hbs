<div class="container mt-3" style="max-width: 750px;"> 
  <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
    <option selected disabled hidden>類別</option>
    <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option>
  </select>
  <div class="mt-3">
    <span>總金額:</span>
    <span>{{ totalAmount }}</span>
  </div>

  <div class="list-group">
    {{#each records}}
    <div class="d-flex">
      <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between" aria-current="true">
          <div class="d-flex align-items-center">
            <i class="{{ this.icon }}"></i>
            <div class="d-flex row">
              <span class="ms-3">{{ this.name }}</span>
              <span class="ms-3">{{ this.date }}</span>
            </div>
          </div>
          <div class="d-flex align-items-center">
            <span class="ms-3">{{ this.amount }}</span>
          </div>
      </a>
      <div class="d-flex align-items-center">
        <a class="ms-3" style="width: 60px; text-decoration:none;" href="./records/{{ this._id }}/edit">修改</a>
        <form action="./records/{{ this._id }}/?_method=DELETE" method="POST" >
            <button type="submit" class="btn btn-link" style="width: 60px; text-decoration:none;">刪除</button>  
        </form>
      </div>
    </div> 
    {{/each}}
  </div>
  <a class="btn btn-primary mt-3" href="./records/new">新增支出</a>
</div>